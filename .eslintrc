{
    "env" : {
        "browser" : true,
        "node" : true,
        "es6" : true
    },
    "parserOptions": {
        sourceType: "module",
        arrowFunctions: true,
        ecmaVersion: 6,
        spread: true,
        ecmaFeatures:{
            jsx: true,
            experimentalObjectRestSpread: true
        }
    },
    plugins: [
        "react"
    ],
    "rules" : {
        "no-unused-vars" : 2,
        "no-undef" : 2,
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error",
    },

}
